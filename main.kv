#:kivy 1.0.9

Screen:
    MDCard:
        size_hint: None, None
        size: 300, 400
        pos_hint: {"center_x":0.5,"center_y":0.5}
        elevation: 10
        padding: 25
        spacing: 25

        orientation: "vertical"

        MDLabel:
            id: title_label
            text: "Fishit"
            font_size: 40
            halign: "center"
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15

        MDTextField:
            id: time
            hint_text: "Time to fish in minutes"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x":0.5}

        MDRoundFlatButton:
            id: state_label
            text: "Start"
            font_size: 12
            pos_hint: {"center_x":0.5}
            on_press: app.toggle()

        MDLabel:
            id: catched_label
            text: "catched"
            font_size: 12
            halign: "center"
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 4
        
        GridLayout:
            cols: 2

            MDLabel:
                id: catch_label
                text: "0"
                font_size: 12
                size_hint_y: None
            
            MDLabel:
                id: time_label
                text: "00:00:00"
                font_size: 12
                size_hint_y: None
            
