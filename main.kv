#:kivy 1.0.9

Screen:
    MDCard:
        size_hint: None, None
        size: 300, 400
        pos_hint: {"center_x":0.5,"center_y":0.5}
        elevation: 10
        padding: 25
        spacing: 25

        orientation: "vertical"

        MDLabel:
            id: title_label
            text: "Fishit"
            font_size: 40
            halign: "center"
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15
        
        MDTextField:
            id: time
            hint_text: "Time to fish in minutes"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x":0.5}
        
        MDRoundFlatButton:
            id: fish
            text: "Start"
            font_size: 12
            pos_hint: {"center_x":0.5}
            on_press: app.toggle_start()

        MDLabel:
            id: catched_label
            text: "catched"
            font_size: 12
            halign: "center"
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 4